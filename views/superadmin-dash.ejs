<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Super Admin Dashboard</title>

  <style>
    body {
      background: #f4f6f9;
    }
    .container {
      max-width: 900px;
      margin: 30px auto;
    }
    .btn-toggle {
      padding: 10px 16px;
      background: #000000;
      color: #fff;
      border: none;
      border-radius: 3px;
      margin-bottom: 20px;
    }
    .form-card {
      background: #fff;
      padding: 20px;
      border-radius: 3px;
      box-shadow: 0 6px 18px rgba(0,0,0,0.06);
      display: none;         
    }
    .form-card h3 {
      margin-top: 0;
      font-size: 18px;
      color: #222;
      margin-bottom: 12px;
    }
    .form-group { margin-bottom: 14px; }
    .form-group label { display: block; margin-bottom: 6px; }
    input, select {
      width: 100%;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 3px;
      font-size: 14px;
    }
    .btn-submit {
      padding: 10px 14px;
      background: #000000;
      border: none;
      color: #fff;
      border-radius: 3px;
      cursor: pointer;
    }
    .table-wrap {
      background: #fff;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 6px 18px rgba(0,0,0,0.06);
    }
    table.simple {
      width: 100%;
      border-collapse: collapse;
    }
    table.simple th,
    table.simple td {
      padding: 12px 10px;
      border-bottom: 1px solid #e6e9ef;
      font-size: 14px;
      text-align: left;
    }
    table.simple thead {
      background: #f4f6fb;
    }
    .btn-view {
      padding: 6px 10px;
      background: #000000;
      border-radius: 6px;
      color: #ffffff;
      text-decoration: none;
      cursor: pointer;
    }
    .modal-bg {
    display: none;                      /* hides modal initially */
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.5);        
    justify-content: center;           
    align-items: center;                
    z-index: 9999;                      
    }
    .modal-box {
    background: white;
    padding: 20px;
    width: 350px;
    border-radius: 10px;
    position: relative;
    box-shadow: 0 5px 20px rgba(0,0,0,0.25);
    }
    .close-btn {
    position: absolute;
    top: 10px;
    right: 15px;
    cursor: pointer;
    font-size: 22px;
    font-weight: bold;
    }
  </style>
</head>
<body>

<div class="container">

   <div style="margin-right: auto;margin-bottom: 20 px;">
  <button class="btn-toggle" onclick="window.location.href='/dashboard/superadmin'">Orders</button>
  <button class="btn-toggle" onclick="window.location.href='/products'">Products</button>
  <button class="btn-toggle" onclick="window.location.href='/admins'">Administrators</button>
  <button class="btn-toggle" onclick="window.location.href='/shoppers'">Shopers</button>
  <button class="btn-toggle" onclick="window.location.href='/logout'">Logout</button>
  </div>
<div style="margin-top: 20px;" >
 

  <!-- pop up modal used to edit order data-->
   <div id="orderModal" class="modal-bg">
    <div class="modal-box">
        <span class="close-btn" onclick="closeModal()">x</span>
        <h3 id="madalTitle">Edit Order</h3>
    <form id="modalForm" method="POST">
      <div class="form-group">  
        <label>Customer ID</label>
        <input type="text" name="customerId" id="modalItem" readonly>
      </div>
        <div class="form-group">
          <label>Product ID</label>
          <input type="text" name="productId" id="modalItemId" readonly>
        </div>
        <div class="form-group">
          <label>Product Name</label>
          <input type="text" name="productName" id="modalItemName" readonly>
        </div>
        <div class="form-group">
          <label>Quantity</label>
          <input type="number" name="quantity" id="modalQuantity" readonly>
        </div>
         <div class="form-group">
          <label>Status</label>
          <select name="status" id="modalStatus" required>
            <option value="Pending">Pending</option>
            <option value="Processing">Processing</option>
            <option value="Shipped">Shipped</option>
            <option value="Delivered">Delivered</option>
            <option value="Cancelled">Cancelled</option>
          </select>
        </div>
      <button class="btn-submit" type="submit" id="modalBtn">Edit Order</button>
    </form>
    </div>
    </div>



  <!--table showing orders -->
  <div class="table-wrap" id="tableSection">
    <h2>Orders</h2>
    <table class="simple">
      <thead>
        <tr>
          <th>Customer ID</th>
          <th>Product ID</th>
          <th>Product Name</th>
          <th>Quantity</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
   <%if (orders && orders.length >0){%>
    <% orders.forEach(order => {%>
            <tr>
              <td><%= order.customerId %></td>
              <td><%= order.productId %></td>
              <td><%= order.productName %></td>
              <td><%= order.quantity %></td>
              <td><%= order.status %></td>
              <td>
                <button type="button" class="btn-view" onclick="editOrder('<%= order._id%>',
                '<%= order.customerId %>',
                '<%= order.productId %>',
                '<%= order.productName %>',
                '<%= order.quantity%>',
                '<%= order.status.replace(/'/g, '\\\'') %>')">
                Edit
            </button>
                <a class="btn-view" href="/orders/<%= order._id%>/delete">Delete</a>
              </td>
            </tr>
<%})%>
<%} else { %>
          <tr>
            <td colspan="4" style="text-align:center; padding:14px; color:#666;">
              No orders found.
            </td>
          </tr>
          <%}%>
      </tbody>
    </table>
  </div>
</div>
</div>
<script>

  function showForm() {
    document.getElementById("orderForm").style.display = "block";
    document.getElementById("tableSection").style.display = "none";
    document.getElementById("backBtn").style.display = "inline-block";
  }

 //function for showing orders table
  function showTable() {
    document.getElementById("orderForm").style.display = "none";
    document.getElementById("tableSection").style.display = "block";
    document.getElementById("backBtn").style.display = "none";
  }

  //function for showing modal used for updating orders
  function editOrder(id, customerId, productId,productName, quantity, status){ 
    document.getElementById("modalItem").value = customerId
    document.getElementById("modalItemId").value = productId
    document.getElementById("modalItemName").value = productName
    document.getElementById("modalQuantity").value = quantity
    document.getElementById("modalStatus").value = status
    document.getElementById("modalForm").action = "/orders/" +id+"?_method=put";
    document.getElementById("orderModal").style.display = "flex";

  }

  // function for closing modal used for updating orders
    function closeModal(){ 
    document.getElementById("orderModal").style.display = "none";

  }
</script>

</body>
</html>