<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Customers</title>

  <style>
    body {
      background: #f4f6f9;
    }
    .container {
      max-width: 900px;
      margin: 30px auto;
    }
    .btn-toggle {
      padding: 10px 16px;
      background: #000000;
      color: #fff;
      border: none;
      border-radius: 3px;
      margin-bottom: 20px;
    }
    .form-card {
      background: #fff;
      padding: 20px;
      border-radius: 3px;
      box-shadow: 0 6px 18px rgba(0,0,0,0.06);
      display: none;         
    }
    .form-card h3 {
      margin-top: 0;
      font-size: 18px;
      color: #222;
      margin-bottom: 12px;
    }
    .form-group { margin-bottom: 14px; }
    .form-group label { display: block; margin-bottom: 6px; }
    input, select {
      width: 100%;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 3px;
      font-size: 14px;
    }
    .btn-submit {
      padding: 10px 14px;
      background: #000000;
      border: none;
      color: #fff;
      border-radius: 3px;
      cursor: pointer;
    }
    .table-wrap {
      background: #fff;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 6px 18px rgba(0,0,0,0.06);
    }
    table.simple {
      width: 100%;
      border-collapse: collapse;
    }
    table.simple th,
    table.simple td {
      padding: 12px 10px;
      border-bottom: 1px solid #e6e9ef;
      font-size: 14px;
      text-align: left;
    }
    table.simple thead {
      background: #f4f6fb;
    }
    .btn-view {
      padding: 6px 10px;
      background: #000000;
      border-radius: 6px;
      color: #ffffff;
      text-decoration: none;
      cursor: pointer;
    }
    .modal-bg {
    display: none;                      /* hides the modal initially */
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.5);        
    justify-content: center;            
    align-items: center;                
    z-index: 9999;                      
    }
    .modal-box {
    background: white;
    padding: 20px;
    width: 350px;
    border-radius: 10px;
    position: relative;
    box-shadow: 0 5px 20px rgba(0,0,0,0.25);
    }
    .close-btn {
    position: absolute;
    top: 10px;
    right: 15px;
    cursor: pointer;
    font-size: 22px;
    font-weight: bold;
    }
  </style>
</head>

<body>
<div class="container">
   <div style="margin-right: auto;margin-bottom: 20 px;">
  <button class="btn-toggle" onclick="editProfile('<%= customer.id%>','<%= customer.email %>','<%= customer.address %>')">Edit Profile</button>
    <button class="btn-toggle" onclick="window.location.href='/customer/logout'">Logout</button>
  </div>
<div style="margin-top: 20px;" >
  <button class="btn-toggle" onclick="showTable2()">Existing Order</button>
  <button class="btn-toggle" onclick="showTable()" style="display:none;" id="backBtn">Home</button>
  
  <!--modal for updating customer profile-->
   <div id="orderModal" class="modal-bg">
    <div class="modal-box">
        <span class="close-btn" onclick="closeModal()">x</span>
        <h3 id="madalTitle">Edit Profile</h3>
    <form id="modalForm" method="POST">
      <div class="form-group">
        <label>Customer Email</label> 
        <input type="text" name="email" id="modalItem" required>
      </div>
        <div class="form-group">
          <label>Address</label>
          <input type="text" name="address" id="modalItemId" required>
        </div>
      <button class="btn-submit" type="submit" id="modalBtn">Edit Profile</button>
    </form>
    </div>
    </div>

  <!--table for showing products-->
  <div class="table-wrap" id="tableSection">
    <h2>Available Products</h2>
    <table class="simple">
      <thead>
        <tr>
          <th>Product Name</th>
          <th>Price</th>
          <th>Availability</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
   <%if (products && products.length >0){%>
    <% products.forEach(product => {%>
            <tr>
              <td><%= product.itemName %></td>
              <td><%= product.price %></td>
              <td>
                <% if (product.quantity > 0){ %>
                    <span>In Stock</span>
                <%} else { %>
                    <span>out of stock</span>
                <% } %>
            </td>
              <td>
               <form action="/customer/order" method="POST">
                <input type="hidden" name="productId" value="<%= product._id%>">
                <input type="hidden" name="productName" value="<%= product.itemName%>">
                <input type="number" name="quantity" min="1" style="width: 80px;">
                <% if (product.quantity > 0){ %>
                <button class="btn-submit" type="submit">Order</button>
                <% } %>
                </form>
              </td>
            </tr>
<%})%>
<%} else { %>
          <tr>
            <td colspan="4" style="text-align:center; padding:14px; color:#666;">
              No Customers found.
            </td>
          </tr>
          <%}%>

      </tbody>

    </table>
  </div>

  <!--table for showing orders-->
  <div class="table-wrap" id="tableOrder" style="display: none">
    <h2>My Orders</h2>
    <table class="simple">
      <thead>
        <tr>
          <th>Product Name</th>
          <th>Quantity</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
   <%if (orders && orders.length >0){%>
    <% orders.forEach(order => {%>
            <tr>
              <td><%= order.productName %></td>
              <td><%= order.quantity %></td>
              <td><%= order.status%></td>
            </tr>
<%})%>
<%} else { %>
          <tr>
            <td colspan="4" style="text-align:center; padding:14px; color:#666;">
              No orders found.
            </td>
          </tr>
          <%}%>
      </tbody>
    </table>
  </div>
</div>
</div>



<script>
 // function for showing orders table
  function showTable2() {
    document.getElementById("tableOrder").style.display = "block"; 
    document.getElementById("tableSection").style.display = "none";
    document.getElementById("backBtn").style.display = "inline-block";
  }

   //function for showing Products table
  function showTable() {
    document.getElementById("tableOrder").style.display = "none";
    document.getElementById("tableSection").style.display = "block";
    document.getElementById("backBtn").style.display = "none";
  }

   //function for showing modal used for updating profile
  function editProfile(id,email,address){    
    document.getElementById("modalItem").value = email
    document.getElementById("modalItemId").value = address
    document.getElementById("modalForm").action = "/profile/"+id+"?_method=put";
    document.getElementById("orderModal").style.display = "flex";

  }

  //function for closing modal used for updating profile
    function closeModal(){ 
    document.getElementById("orderModal").style.display = "none";

  }
</script>

</body>
</html>